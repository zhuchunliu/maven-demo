<?xml version="1.0" encoding="UTF-8"?>
<assembly>
    <baseDirectory></baseDirectory>
    <formats>
        <format>tar.gz</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>src/main/resources/scripts</directory>
            <outputDirectory>vaccine-admin</outputDirectory>
            <includes>
                <include>start.sh</include>
                <include>start.bat</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/resources</directory>
            <outputDirectory>vaccine-admin/conf</outputDirectory>
            <includes>
                <include>static/*</include>
                <include>config/*</include>
                <include>spring/*</include>
                <include>logback.xml</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <unpack>false</unpack>
            <scope>compile</scope>
            <outputDirectory>vaccine-admin/lib</outputDirectory>
        </dependencySet>
    </dependencySets>
</assembly>